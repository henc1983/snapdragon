{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "styles" : {
        "blocks": {
            "core/paragraph" : {
                "color": {
                    "text": "var(--wp--preset--color--contrast)"
                }
            },
            "core/heading" : {
                "color": {
                    "text": "var(--wp--preset--color--heading)"
                }
            }
        }
    },
    "settings": {
        "layout": {
            "contentSize": "1280px",
            "wideSize": "1400px"
        },
        "color": {
            "palette": [
                {
                    "color": "#f1f1f1",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#27272A",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#09090B",
                    "name": "Heading",
                    "slug": "heading"
                },
                {
                    "color": "#db2777",
                    "name": "Primary",
                    "slug": "primary"
                }
            ]
        },
        "typography": {
            "lineHeight": true,
            "textTransform": true,
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
                    "name": "Primary",
                    "slug": "primary"
                }
            ],
            "fluid": true,
            "fontSizes": [
                {
                    "fluid": {
                        "min": "0.75rem",
                        "max": "0.825rem"
                    },
                    "name": "Small",
                    "size": "0.825rem",
                    "slug": "small"
                },
                {
                    "fluid": {
                        "min": "1rem",
                        "max": "1.175rem"
                    },
                    "name": "Normal",
                    "size": "1.175rem",
                    "slug": "normal"
                },
                {
                    "fluid": {
                        "min": "1.5rem",
                        "max": "1.625rem"
                    },
                    "name": "Medium",
                    "size": "1.625rem",
                    "slug": "medium"
                
                },
                {
                    "fluid": {
                        "min": "2rem",
                        "max": "2.125rem"
                    },
                    "name": "Large",
                    "size": "2.125rem",
                    "slug": "large"
                
                },
                {
                    "fluid": {
                        "min": "2.5rem",
                        "max": "2.625rem"
                    },
                    "name": "Extra Large",
                    "size": "2.635rem",
                    "slug": "xlarge"
                
                },
                {
                    "fluid": {
                        "min": "3.5rem",
                        "max": "3.725rem"
                    },
                    "name": "Huge",
                    "size": "3.725rem",
                    "slug": "huge"
                }
            ]
        }
    }
}